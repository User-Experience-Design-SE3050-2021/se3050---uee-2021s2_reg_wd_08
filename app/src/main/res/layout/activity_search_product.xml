<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchProductActivity">


    <RelativeLayout
        android:id="@+id/r5"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#E7D9EA"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="101dp">>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#F84545"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="74dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="69dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/ic_baseline_menu_24" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="163dp"
                        android:layout_height="47dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"

                        android:text="Cargills"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="40dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="19dp"
                        app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/search_product_name"
                            android:layout_width="267dp"
                            android:layout_height="47dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:drawable="@drawable/ic_baseline_search_24"
                            android:drawableLeft="@drawable/ic_baseline_search_24"

                            android:drawablePadding="10dp"

                            android:textColor="#B3A2A2"
                            android:textSize="25dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/search_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:text="Search" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="514dp"
        android:layout_below="@id/r5"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="-12dp"
        android:background="#E7D9EA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="10dp"
        android:background="#E7D9EA"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="182dp"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="300dp"
                android:layout_marginRight="0dp"
                android:background="@color/white">


                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/ic_baseline_filter_alt_24" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filter"
                    android:textSize="28dp" />


            </FrameLayout>

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>