<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="101dp"
        android:background="#E7D9EA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="#F84545">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="69dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_baseline_menu_24" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="163dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"

                    android:text="Cargills"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="19dp"
                    app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/Search_box"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@color/white"
                    android:drawablePadding="10dp"
                    android:text="What are you looking for?"
                    android:textSize="25dp"
                    android:drawableLeft="@drawable/ic_baseline_search_24"
                    android:textColor="#B3A2A2"/>


            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="0dp">


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="148dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/vegid"
                        android:layout_width="174dp"
                        android:layout_height="141dp"

                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="#F6F7F8"
                        android:onClick="changeFragment"
                        android:paddingRight="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"


                        tools:ignore="OnClick">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="146dp"
                                android:layout_height="94dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/vegcat" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vegetables"
                                android:textAlignment="center"
                                android:textSize="25dp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/fruitid"
                        android:layout_width="174dp"
                        android:layout_height="146dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="#F6F7F8"
                        android:onClick="changeFragment"
                        android:paddingRight="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"


                        tools:ignore="OnClick">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="146dp"
                                android:layout_height="94dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/fruits" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fruits"
                                android:textAlignment="center"
                                android:textSize="25dp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                       android:id="@+id/fishes"
                        android:onClick="changeFragment"
                        android:layout_width="174dp"

                        android:layout_height="141dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="#F6F7F8"
                        android:paddingRight="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"


                        tools:ignore="OnClick">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="146dp"
                                android:layout_height="94dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/fish1" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fish"
                                android:textAlignment="center"
                                android:textSize="25dp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/meat"
                        android:layout_width="174dp"
                        android:onClick="changeFragment"

                        android:layout_height="146dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="#F6F7F8"
                        android:paddingRight="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"


                        tools:ignore="OnClick">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/fruit"
                                android:layout_width="146dp"
                                android:layout_height="94dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/meat" />

                            <TextView
                                android:id="@+id/texfruit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Meat"
                                android:textAlignment="center"
                                android:textSize="25dp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

        </FrameLayout>


        <fragment
            android:id="@+id/fragdefault"
            android:name="com.example.cargillsshop.VegFragment"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:layout_marginTop="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_baseline_homewhite_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_baseline_menu_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:text="Order"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_baseline_appsblack_24" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:text="Category"

                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_baseline_more_horiz_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:text="more"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>